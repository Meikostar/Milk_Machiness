<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:navigationTitle="WIFI设置" />
    <com.canplay.milk.view.scrollView.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_cur_wifi_pic"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/wifi1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_weight="1"
                    android:textSize="15.5sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text=""
                    android:hint="wifi开启"
                    android:id="@+id/tv_wifi"
                    android:maxLength="11"
                    android:textColor="#9fa0a0"
                    android:textColorHint="#bdbdbd"/>
                <com.canplay.milk.view.MCheckBox

                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    app:canNoClick="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_wifi"
                    app:drawablechoose="@drawable/btn_enc_time_on"
                    app:drawables="@drawable/btn_enc_time_off"
                    android:layout_width="57dp"
                    android:layout_height="27dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_cur_wifi_pic"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/wifi3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="WIFI140948"
                    android:textColor="#9fa0a0"
                    android:textSize="15.5sp" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gou"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_cur_wifi_pic"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/wifi3"
                    android:textSize="15sp" />
                <com.canplay.milk.view.ClearEditText
                    android:textSize="15.5sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text=""
                    android:hint="输入wifi密码"
                    android:id="@+id/et_wifi"
                    android:textColor="#9fa0a0"
                    android:textColorHint="#bdbdbd"/>

            </LinearLayout>

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_status"
                android:layout_marginTop="22dp"
                android:text="设备已连接"
                android:textColor="#727171"
                android:textSize="15.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_cur_wifi_pic"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/wifi2"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="35dp" />
                <TextView
                    android:textSize="15.5sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="WFI15u98"
                    android:id="@+id/tv_equptname"
                    android:textColor="#9fa0a0"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_cur_wifi_pic"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/wifi4"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="35dp" />
                <TextView
                    android:textSize="15.5sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="WFI15u98"
                    android:id="@+id/tv_user"
                    android:textColor="#9fa0a0"
                    android:layout_weight="1"
                    />
                <TextView

                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_login_status"
                    android:layout_marginRight="10dp"
                    android:text="已登录"
                    android:textColor="@color/a0"
                    android:textSize="15.5sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_get"
                android:layout_width="150dp"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/green1_retagle"
                android:gravity="center"
                android:text="配置设备"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/tv_search"
                android:layout_width="150dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/green1_retagle"
                android:gravity="center"
                android:text="设备搜索"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/tv_open"
                android:layout_width="150dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/green1_retagle"
                android:gravity="center"
                android:text="断开设备"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </com.canplay.milk.view.scrollView.StickyScrollView>
</LinearLayout>
