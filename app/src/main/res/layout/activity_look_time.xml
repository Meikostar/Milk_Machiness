<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/line"/>
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationTitle="查看接种时间" />

   <com.canplay.milk.view.scrollView.StickyScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/whilte2_retagle"
               android:id="@+id/ll_my"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal">
               <ImageView

                   android:layout_marginLeft="14dp"
                   android:layout_width="37dp"
                   android:layout_height="37dp"
                   android:src="@drawable/time1"/>
               <TextView
                   android:id="@+id/tv_content"
                   android:text="小儿麻痹育苗（第三次，预估时间）"
                   android:layout_weight="1"
                   android:layout_marginLeft="13dp"
                   android:textColor="@color/color72"
                   android:textSize="16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:visibility="gone"
                   android:id="@+id/tv_phone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="13dp"
                   android:text="134***1234"
                   android:textColor="@color/slow_black"
                   android:textSize="15sp" />

               <ImageView

                   android:layout_width="8dp"
                   android:layout_height="13dp"
                   android:layout_marginRight="13dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_marginTop="5dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/whilte2_retagle"
               android:id="@+id/ll_time"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal">

               <TextView

                   android:text="上次育苗时间"
                   android:layout_weight="1"
                   android:layout_marginLeft="15dp"
                   android:textColor="@color/a0"
                   android:textSize="16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="13dp"
                   tools:text="2018年3月1日"
                   android:textColor="@color/color72"
                   android:textSize="15sp" />


           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_time2"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="5dp"
               android:background="@drawable/whilte2_retagle"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="13dp"
                   android:layout_weight="1"
                   android:text="接种时间"
                   android:textColor="@color/slow_black"
                   android:textSize="16sp" />

               <TextView
                   android:id="@+id/tv_time2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="13dp"
                   android:textColor="@color/slow_black"
                   android:textSize="15sp"
                   tools:text="2018年4月6日" />

           </LinearLayout>

           <LinearLayout
               android:layout_marginTop="5dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/whilte2_retagle"
               android:id="@+id/ll_now"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal">

               <TextView
                   android:text="现在时间"
                   android:layout_weight="1"
                   android:layout_marginLeft="13dp"
                   android:textColor="@color/a0"
                   android:textSize="16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_now"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="13dp"
                   tools:text="2018年3月1日"
                   android:textColor="@color/color72"
                   android:textSize="15sp" />

           </LinearLayout>
           <LinearLayout
               android:layout_marginTop="5dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/whilte2_retagle"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal">

               <TextView
                   android:text="距离下次育苗时间"
                   android:layout_weight="1"
                   android:layout_marginLeft="13dp"
                   android:textColor="@color/a0"
                   android:textSize="16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_day"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="13dp"
                   tools:text="27"
                   android:textColor="@color/color72"
                   android:textSize="25sp" />

               <ImageView

                   android:layout_width="8dp"
                   android:layout_height="13dp"
                   android:layout_marginRight="13dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_marginTop="5dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:background="@drawable/whilte2_retagle"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal">
               <ImageView
                   android:layout_marginLeft="14dp"
                   android:layout_width="37dp"
                   android:layout_height="37dp"
                   android:src="@drawable/time2"/>
               <TextView
                   android:text="育苗提醒"
                   android:layout_weight="1"
                   android:layout_marginLeft="13dp"
                   android:textColor="@color/a0"
                   android:textSize="16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <com.canplay.milk.view.MCheckBox

                   android:layout_marginRight="10dp"
                   android:clickable="true"
                   app:canNoClick="false"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/iv_wifi"
                   app:drawablechoose="@drawable/btn_cur_wifi_on"
                   app:drawables="@drawable/btn_cur_wifi_off"
                   android:layout_width="57dp"
                   android:layout_height="27dp"/>
           </LinearLayout>
           <TextView
               android:layout_marginTop="12dp"

               android:text="点击：接种时间可修改时间的育苗接种时间。"
               android:layout_marginLeft="43dp"
               android:textColor="@color/a0"
               android:textSize="16sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
   </com.canplay.milk.view.scrollView.StickyScrollView>

</LinearLayout>