<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="173dp"
        android:layout_height="155dp"
        android:orientation="vertical"
        android:src="@drawable/popbg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="14.5dp"
        />

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="155dp"
        android:orientation="vertical"

        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="14.5dp"
        >
         <LinearLayout
             android:layout_marginTop="2dp"
             android:id="@+id/ll_ring"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_marginLeft="12dp"
                 android:src="@drawable/pop2"
                 android:layout_width="20dp"
                 android:layout_height="20dp" />
             <TextView
                 android:gravity="center_vertical"
                 android:textSize="14sp"
                 android:textColor="@color/color72"
                 android:layout_marginLeft="20dp"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:text="冲奶提醒"
                 />
         </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:id="@+id/ll_wifi"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="12dp"
                android:src="@drawable/pop4"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/color72"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="WIFI设置"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_water"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="12dp"
                android:src="@drawable/pop3"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_new"
                android:textSize="14sp"
                android:textColor="@color/color72"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="饮水设置"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:id="@+id/ll_milk"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="12dp"
                android:src="@drawable/pop2"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/color72"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="更换奶粉品牌"
                />
        </LinearLayout>




    </LinearLayout>

</RelativeLayout>