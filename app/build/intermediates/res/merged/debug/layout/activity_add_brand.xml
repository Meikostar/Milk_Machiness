<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationRight_type="img"
        app:navigationRight_img="@drawable/gou2"
        app:navigationTitle="新增品牌" />
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/green_oval_lines"
        android:gravity="center_vertical"
        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.canplay.milk.view.ClearEditText
            android:textSize="13.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"

            android:text=""
            android:hint="输入奶粉品牌"
            android:id="@+id/et_brand"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>


    </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.001dp"
          android:id="@+id/line"/>

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/green_oval_lines"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"

            android:hint="选择奶粉段位"
            android:inputType="text"
            android:text=""
            android:focusable="false"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"
            android:textSize="13.5sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="13dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/arrow_rights"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/green_oval_lines"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <com.canplay.milk.view.ClearEditText
            android:inputType="number|numberDecimal"
            android:id="@+id/et_ml"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入单次奶冲参考水量"
            android:maxLength="11"
            android:text=""
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"
            android:textSize="13.5sp" />

        <TextView
            android:textSize="13.5sp"

            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="ml"
            android:hint="男"
            android:textColor="#9fa0a0" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/green_oval_line"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.canplay.milk.view.ClearEditText
            android:inputType="number|numberDecimal"
            android:layout_weight="1"
            android:textSize="13.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:hint="输入单次奶冲参考水温"
            android:id="@+id/et_wd"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>
        <TextView
            android:textSize="13.5sp"

            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=" ℃"
            android:hint="男"
            android:textColor="#9fa0a0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/green_oval_lines"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <com.canplay.milk.view.ClearEditText
            android:inputType="number|numberDecimal"
            android:id="@+id/et_weight"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入单次奶冲参考奶粉重量"
            android:text=""
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical"
            android:hint="男"
            android:text="g"
            android:textColor="#9fa0a0"
            android:textSize="13.5sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="35dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:padding="5dp"
            android:text="提示：宝宝信息填写完毕，完成后不可以修改"
            android:textColor="@color/a0"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>
