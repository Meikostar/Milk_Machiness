<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/content_bg">
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationRight_img="@drawable/scan"
        app:navigationRight_type="img"
        app:navigationTitle="奶粉信息" />

<com.canplay.milk.view.scrollView.StickyScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/whites_retagle"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/deail1"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:text="品牌"
                android:textColor="#9fa0a0"
                android:textSize="15.5sp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:id="@+id/tv_name"
                android:gravity="center_vertical"
                android:text="水量设置"
                android:textColor="#3e3e39"
                android:textSize="15.5sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/blues_retagle">


            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="113dp"
                android:layout_height="143dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/deail2" />

            <LinearLayout
                android:layout_marginLeft="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="91dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/tv_weigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    tools:text="22g"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="bottom"
                    android:layout_width="55dp"
                    android:layout_height="1.5dp"
                    android:background="@color/slow_black"/>



            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <View

                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="bottom"
                    android:layout_width="39dp"
                    android:layout_height="1.5dp"
                    android:background="@color/slow_black"/>

                <TextView

                    android:id="@+id/tv_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    tools:text="150ml"
                    android:textColor="@color/white"
                    android:textSize="16sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView

                    android:id="@+id/tv_wd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="119dp"
                    android:gravity="center"
                    tools:text="50C"
                    android:textColor="@color/white"
                    android:textSize="20sp" />



                <RelativeLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/deail3"
                    android:layout_marginBottom="17dp"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        tools:text="最佳搭配方案\n (12月~18月幼儿)"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:paddingLeft="11dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/whites_retagle"
            android:textSize="15.5sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/tv_name1"
            android:gravity="center_vertical"
            android:text="幼儿配方奶粉"
            android:textColor="#9fa0a0"
            />
        <TextView
            android:paddingLeft="11dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/whites_retagle"
            android:textSize="15.5sp"
            android:id="@+id/tv_detail"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="3段（适合很多sb使用）"
            android:textColor="#9fa0a0"
            />


        <TextView
            android:layout_marginTop="22dp"
            android:id="@+id/tv_sure"
            android:background="@drawable/green1_retagle"
            android:textSize="15.5sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="确认信息"
            android:textColor="#fff"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_change"
            android:background="@drawable/green1_retagle"
            android:textSize="15.5sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="更换奶粉"
            android:textColor="#fff"
            />
    </LinearLayout>
</com.canplay.milk.view.scrollView.StickyScrollView>
</LinearLayout>
